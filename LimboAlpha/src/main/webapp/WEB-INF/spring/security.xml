<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security" 
xmlns:beans="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
http://www.springframework.org/schema/security 
http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<http access-denied-page="/error403.jsp">
		<intercept-url pattern="/index*" access="ROLE_USER,ROLE_ADMIN,ROLE_SUPERADMIN"/>
		<intercept-url pattern="/add*" access="ROLE_USER,ROLE_ADMIN,ROLE_SUPERADMIN"/>
		<intercept-url pattern="/delete/*" access="ROLE_ADMIN,ROLE_SUPERADMIN"/>
		<intercept-url pattern="/clients*" access="ROLE_SUPERADMIN"/>
		<form-login login-page="/login.jsp" default-target-url="/index" authentication-failure-url="/login.jsp?error=true"/>
		<logout logout-url="/logout" logout-success-url="/index"/>		
		<remember-me/>
	</http>
	
	<authentication-manager>
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource"
				users-by-username-query="
					select username, password, enabled
					from users where username=?
				"
				authorities-by-username-query="
					select u.username, r.authority
					from roles r
					inner join user_roles ur ON r.role_id = ur.role_id
					inner join users u ON ur.user_id = u.user_id
					where u.username = ?
				"
			/>
		<!--  	<user-service>
				<user name="admin" password="pass" authorities="ROLE_ADMIN,ROLE_USER"/>
				<user name="user1" password="1111" authorities="ROLE_USER"/>
				<user name="user2" password="2222" disabled="true" authorities="ROLE_USER"/>
			</user-service>-->
		</authentication-provider>
	</authentication-manager>
</beans:beans>