	<http access-denied-page="/error403.jsp">
		<intercept-url pattern="/index*" access="ROLE_USER"/>
		<intercept-url pattern="/clients*" access="ROLE_SUPERADMIN"/>
		<intercept-url pattern="/repair/list/returned*" access="ROLE_USER"/>
		<intercept-url pattern="/repair/list/repaired*" access="ROLE_USER"/>
		<intercept-url pattern="/repair/list/all*" access="ROLE_USER"/>
		<intercept-url pattern="/repair/list/deleted*" access="ROLE_ADMIN"/>
		<intercept-url pattern="/repair/list/deleted/*" access="ROLE_ADMIN"/>
		<intercept-url pattern="/repair/add*" access="ROLE_USER"/>
		<intercept-url pattern="/repair/getpdf/*" access="ROLE_USER"/>
		<intercept-url pattern="/repair/delete/*" access="ROLE_ADMIN,ROLE_SUPERADMIN"/>
		<intercept-url pattern="/repair/update/*" access="ROLE_USER"/>
		<intercept-url pattern="/user**" access="ROLE_ADMIN"/>
		<intercept-url pattern="/user/list*" access="ROLE_ADMIN"/>
		<intercept-url pattern="/user/add*" access="ROLE_ADMIN"/>
		<intercept-url pattern="/user/delete/*" access="ROLE_ADMIN"/>
		<intercept-url pattern="/user/update/*" access="ROLE_ADMIN"/>
		<intercept-url pattern="/user/update/add*" access="ROLE_ADMIN"/>
		<form-login login-page="/login.jsp" default-target-url="/index" authentication-failure-url="/login.jsp?error=true"/>
		<logout logout-url="/logout" logout-success-url="/index"/>		
		<remember-me/>
	</http>
	
	<authentication-manager>
		<authentication-provider>
		<!-- 	<password-encoder ref="passwordEncoder" >
	             <salt-source ref="saltSource"/>
	        </password-encoder> -->
			<jdbc-user-service data-source-ref="dataSource"
				users-by-username-query="
					select username, password, enabled
					from users where username=?
				"
				authorities-by-username-query="
					select u.username, r.authority
					from roles r
					inner join user_roles ur ON r.role_id = ur.role_id
					inner join users u ON ur.user_id = u.user_id
					where u.username = ?
				"
			/>
		</authentication-provider>
	</authentication-manager>
</beans:beans>